<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <!-- Import Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
     <!-- Import Roboto Font -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <!-- Adds css icons -->
    <script src="https://kit.fontawesome.com/a92e2be0b6.js" crossorigin="anonymous"></script>
    <style>
        body {
            color: white;
            background-color: #323232;
            font-family: 'Roboto', sans-serif;
        }

        .profile{
            width: 30%;
        }

        .form{
            width: 70%;
        }

        @media screen and (max-width:681px) {
            .media{
                flex-direction: column;
            }
            .profile, .form{
                width: 100%;
            }
        }
    </style>
</head>

<body>
    <!-- Dark light mode -->
    <div class="fixed top-5 right-5 text-lg">
        <div class="lightMode">
            <i class="fa-solid fa-sun"></i>
        </div>
        <div class="darkMode hidden">
            <i class="fa-solid fa-moon"></i>
        </div>
    </div>
    <!-- Main Content -->
    <div class="flex-1 p-10">
        <h1 class="text-4xl font-bold">User Dashboard</h1>
        <div class="text-orange-400 py-2"><p>Your great subtitle goes here</p></div>

        <div class="flex gap-10 mt-10 media">
            <!-- Profile Section -->
            <div class="bg-white rounded-lg shadow p-6 profile">
                <div class="flex flex-col items-center justify-center p-4">
                    <div class="w-24 h-24 mb-4">
                        <img src="https://via.placeholder.com/100" alt="Profile Image" class="rounded-full shadow">
                    </div>
                    <p class="text-2xl text-gray-900 font-bold mb-2">Name</p>
                    <p class="text-gray-500 mb-4 text-center">Placeholder Text</p>
                    <div class="space-y-2 w-full px-4">
                        <div class="flex justify-between w-full">
                            <p class="text-gray-500">Placeholder</p>
                            <span class="text-gray-800">66</span>
                        </div>
                        <div class="flex justify-between w-full">
                            <p class="text-gray-500">Placeholder</p>
                            <span class="text-gray-800">19</span>
                        </div>
                        <div class="flex justify-between w-full">
                            <p class="text-gray-500">Placeholder</p>
                            <span class="text-gray-800">09</span>
                        </div>
                    </div>
                    <button class="bg-orange-400 text-white px-4 py-2 rounded mt-6 hover:bg-orange-600">
                        View Public Profile
                    </button>
                </div>                
            </div>

            <!-- Form Section -->
            <div class="form">
                <div class="border-b border-gray-200 mb-6">
                    <nav class="flex space-x-8">
                        <a href="#" class="pb-4  hover:text-orange-400">Account Settings</a>
                        <a href="#" class="pb-4  hover:text-orange-400">Documents</a>
                        <a href="#" class="pb-4  hover:text-orange-400">Notifications</a>
                    </nav>
                </div>

                <form>
                    <div class="grid grid-cols-2 gap-6">
                        <div>
                            <label for="first-name" class="block text-orange-400 py-2">First Name</label>
                            <input type="text" id="first-name" class="w-full border border-gray-300 p-2 rounded">
                        </div>
                        <div>
                            <label for="last-name" class="block text-orange-400 py-2">Last Name</label>
                            <input type="text" id="last-name" class="w-full border border-gray-300 p-2 rounded">
                        </div>
                        <div>
                            <label for="phone" class="block text-orange-400 py-2">Phone Number</label>
                            <input type="text" id="phone" class="w-full border border-gray-300 p-2 rounded">
                        </div>
                        <div>
                            <label for="email" class="block text-orange-400 py-2">Email address</label>
                            <input type="email" id="email" class="w-full border border-gray-300 p-2 rounded">
                        </div>
                        <div>
                            <label for="city" class="block text-orange-400 py-2">City</label>
                            <input type="text" id="city" class="w-full border border-gray-300 p-2 rounded">
                        </div>
                        <div>
                            <label for="state" class="block text-orange-400 py-2">State/Country</label>
                            <input type="text" id="state" class="w-full border border-gray-300 p-2 rounded">
                        </div>
                        <div>
                            <label for="postcode" class="block text-orange-400 py-2">Postcode</label>
                            <input type="text" id="postcode" class="w-full border border-gray-300 p-2 rounded">
                        </div>
                        <div>
                            <label for="country" class="block text-orange-400 py-2">Country</label>
                            <input type="text" id="country" class="w-full border border-gray-300 p-2 rounded">
                        </div>
                    </div>
                    <button type="submit" class="mt-6 bg-orange-400 text-white px-4 py-2 rounded hover:bg-orange-600">
                        Update
                    </button>
                </form>
            </div>
        </div>
    </div>
    </div>
    <script>
        var darkMode = document.querySelector(".darkMode");
        var lightMode = document.querySelector(".lightMode");


        darkMode.onclick = function () {
            document.body.style.backgroundColor = "#323232";
            document.body.style.color = "white";
            lightMode.style.display = "block";
            darkMode.style.display = "none";
        }

        lightMode.onclick = function () {
            document.body.style.backgroundColor = "#f0f4f8";
            document.body.style.color = "#1a1a1a";
            lightMode.style.display = "none";
            darkMode.style.display = "block";
        }
    </script>

</body>

</html>
